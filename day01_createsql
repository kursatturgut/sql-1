--tablo olusturma--

CREATE TABLE student
(
id CHAR(4),
name VARCHAR(20),
age NUMBER
); 

--veri girisi--
INSERT INTO student VALUES('1001','MERVEASLAN',25);
INSERT INTO student VALUES('1002','AYSE',12);
--Tablodan veri sorgulama--
SELECT *FROM student;
--tablo silme--
DROP TABLE student; 
--parcali veri girisi--
INSERT INTO student(id,name) VALUES('1003','busra');
--veri tabanýnýzda urunler adýnda bir tablo olusturun
--urun id=>number
--urun adi=>varchar(50)
--fiyat=>number
--(100,cips,5)
--(200,kola,6)
CREATE TABLE urunler
(
urun_id NUMBER,
urun_name VARCHAR(50),
fiyat NUMBER
); 
INSERT INTO urunler VALUES(100,'cips',5);
INSERT INTO urunler VALUES('200','kola',6);

SELECT * FROM Urunler;
DROP TABLE urunler;  